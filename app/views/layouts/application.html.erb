<!DOCTYPE html>
<html>
  <head>
    <title>Growth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="only">
      <header class="header">
        <div class="header_bar_left">
          <h2 class="grid-6"><a href="/">Achieve the goal</a></h2>
        </div>
          <% if user_signed_in? %>
            <div class="header_bar_right">
              <a class="post" href="/tweets/new">今日の経験値</a>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </div>
          <% end %>

      </header>
    <%= yield %>
      <footer>
        <p>
          目標達成応援委員会
        </p>
      </footer>
    </div>
  </body>
</html>
